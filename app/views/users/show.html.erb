<div class = 'user'>
<h2> User Details</h2>
<div class = 'user_container'>
<div class = 'user_row'>
    <div class = 'user_image_section'>
    <img class  = "user_image" src="<%= @user.photo %>" alt="profile">
    </div>
<div class = 'user_block'>
<h3><%= @user.name %></h3>
<p>Number of Posts = <%=@user.posts_counter %></p>
</div>
</div>
<div class = 'user_bio'>
<h3>Bio</h3>
<p> <%= @user.bio %> </p>
</div>

<% @user.three_recent_posts.each do |post| %>
<%= link_to user_post_path(post.author, post) do%>
<div class = 'user_posts'>
<h3>Post # <%= post.title %></h3>
<p><%= post.text %><p>
<p class = 'counters'> Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %></p>
</div>
<% end %>
<% end %>

 <div class = 'button' ><%=link_to 'See All Posts',  posts_path(@user) %> </div>
</div>
</div>